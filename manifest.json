{
    "name": "Search Mentions in Youtube Video",
    "description": "Search Mentions in Youtube Video",
    "version": "0.0.1",
    "manifest_version": 3,
    "permissions": [
        "activeTab",
        "scripting",
        "tabs"
    ],
    "commands": {
        "increment-page": {
            "suggested_key": {
                "default": "Alt+Period"
            },
            "description": "Increment page"
        },
        "decrement-page": {
            "suggested_key": {
                "default": "Alt+Comma"
            },
            "description": "Decrement page"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "img/16.png",
        "32": "img/32.png",
        "48": "img/48.png",
        "128": "img/128.png"
    },
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "img/16.png",
            "32": "img/32.png",
            "48": "img/48.png",
            "128": "img/128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "*://www.youtube.com/*"
            ],
            "js": [
                "./main.js"
            ]
        }
    ]
}